<!--main-->
<main class="main" role="main">
	<!--wrap-->
	<div class="wrap clearfix">
		<!--row-->
		<div class="row">
		<!--content-->
			<section class="content center full-width wow fadeInUp">
				<div class="modal container">
					<h3>Register</h3>
					<%= devise_error_messages! %>
					<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>

					<div class="f-row">
						<%= f.label :avatar do %>
						<%= f.file_field :avatar  %>
						<%= f.hidden_field :avatar_cache %>
					</div>

					<div class="f-row">
						<%= f.email_field :email, autofocus: true, :placeholder => "Your email" %>
					</div>
					<div class="f-row">
						<%= f.password_field :password, autocomplete: "off", :placeholder => 'Your password' %>
						<p class="small"><% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %></p>
					</div>
					<div class="f-row">
						<%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Retype password" %>
					</div>
					
					<div class="f-row bwrap">
						<%= f.submit "Register" %>
					</div>

					<% end %>
					<%= render "devise/shared/links" %>
				</div>
			</section>
			<!--//content-->
		</div>
		<!--//row-->
	</div>
	<!--//wrap-->
</main>
<!--//main-->